<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<corners android:radius="4dp" />
			<stroke android:width="1dp" android:color="#FFC2C6D4" />
			<solid android:color="#FFC2C6D4" />
		</shape>
	</item>

	<item>
		<shape android:shape="rectangle">
			<stroke android:width="1dp" android:color="@color/mek_red" />
			<corners android:radius="4dp" />
			<solid android:color="@color/mek_red" />
		</shape>
	</item>

</selector>