<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/partner_type_background"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/choose_partner_type"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"

        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Car Service"
            android:layout_weight="1"
            android:textColor="@color/app_caption_light_grey"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="@color/chart_deep_red"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Bike Service"
            android:layout_weight="1"
            android:textColor="@color/app_caption_light_grey"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="@color/chart_deep_red"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="SOS/Car Service"
            android:layout_weight="1"
            android:textColor="@color/app_caption_light_grey"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="@color/chart_deep_red"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="SOS/Bike Service"
            android:layout_weight="1"
            android:textColor="@color/app_caption_light_grey"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="@color/chart_deep_red"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"

        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Outstation Cabs"
            android:layout_weight="1"
            android:textColor="@color/app_caption_light_grey"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="@color/chart_deep_red"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <Button
        android:layout_width="124dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Done"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_states"
        android:layout_height="40dp" />


</LinearLayout>