<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="match_parent"
    tools:context=".service_management.ServiceManagement">


<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--All service -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gradient_bottom"
                android:scaleY=".5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="28dp"
                        android:text="Available to all services"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="32dp"
                        android:enabled="true"
                       style="@style/SwitchCompatStyle"
                        android:switchMinWidth="48dp"
                        />


                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gradient_bottom"
                android:scaleY=".5" />




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="match_parent">


                <!--Servicce detials -->

                <FrameLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/offwhite"
                        android:text="Service Details"
                        android:paddingLeft="16dp"
                        android:layout_gravity="left"/>

                    <TextView
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability"
                        android:paddingLeft="16dp"
                        android:textColor="@color/offwhite"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingRight="24dp"
                        android:layout_gravity="right"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/call_background"
                        android:paddingRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:drawableStart="@drawable/onsite_assistance"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:text="Mini"
                            android:drawableLeft="@drawable/onsite_assistance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="4dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="(Indica, Micra, Ritz)"/>

                        <FrameLayout
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:gravity="right"
                                android:enabled="true"
                                android:switchMinWidth="48dp"
                               style="@style/SwitchCompatStyle" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:background="@drawable/call_background"
                        android:paddingRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:drawableStart="@drawable/onsite_assistance"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:text="Micro"
                            android:drawableLeft="@drawable/onsite_assistance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="4dp"
                            android:layout_weight="1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/black"
                            android:text="(Redi, Go, Alto, Nano)"/>

                        <FrameLayout
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:gravity="right"
                                android:enabled="true"
                                android:switchMinWidth="48dp"
                               style="@style/SwitchCompatStyle" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:background="@drawable/call_background"
                        android:paddingRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:drawableStart="@drawable/onsite_assistance"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:text="Sedan"
                            android:drawableLeft="@drawable/onsite_assistance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:gravity="start"
                            android:focusable="true"
                            android:layout_weight="1"
                            android:paddingLeft="4dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/black"
                            android:text="(Swift, Desire,Honda City)"/>

                        <FrameLayout
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:gravity="right"
                                android:enabled="true"
                                android:switchMinWidth="48dp"
                               style="@style/SwitchCompatStyle" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:background="@drawable/call_background"
                        android:paddingRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:drawableStart="@drawable/onsite_assistance"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:text="SUV"
                            android:drawableLeft="@drawable/onsite_assistance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:gravity="start"
                            android:focusable="true"
                            android:layout_weight="1"
                            android:paddingLeft="4dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/black"
                            android:text="(Innova, Tavera, Sumo)"/>

                        <FrameLayout
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:gravity="right"
                                android:enabled="true"
                                android:switchMinWidth="48dp"
                               style="@style/SwitchCompatStyle" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:background="@drawable/call_background"
                        android:paddingRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:drawableStart="@drawable/onsite_assistance"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:text="Traveller"
                            android:drawableLeft="@drawable/onsite_assistance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:paddingLeft="4dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/black"
                            android:text=" (Traveller Go,Traveller Rapid)"/>

                        <FrameLayout
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:gravity="right"
                                android:enabled="true"
                                android:switchMinWidth="48dp"
                               style="@style/SwitchCompatStyle" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:background="@drawable/call_background"
                        android:paddingRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:drawableStart="@drawable/onsite_assistance"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:drawablePadding="8dp"

                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:text="Luxury"
                            android:drawableLeft="@drawable/onsite_assistance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_medium_regular"
                            android:gravity="start"
                            android:focusable="true"
                            android:paddingLeft="4dp"
                            android:layout_weight="1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/black"
                            android:text="(Audi, Ferrari, BMW)"/>

                        <FrameLayout
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:gravity="right"
                                android:enabled="true"
                                android:switchMinWidth="48dp"
                               style="@style/SwitchCompatStyle" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative_1"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_done"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:background="@drawable/done_red_button"
            android:fontFamily="@font/montserrat_medium"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>