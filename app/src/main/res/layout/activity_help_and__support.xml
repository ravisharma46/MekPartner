<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help_and_support.Help_and_Support">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/I_want_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to:"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="13sp"
            android:paddingTop="24dp"
            android:paddingLeft="32dp"
            android:textColor="@color/black"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_below="@id/I_want_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/help_support_background">

            <LinearLayout
                android:id="@+id/Reschedule_my_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reschedule my booking."
                    android:fontFamily="@font/gotham_book"
                    android:textSize="12sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Change_my_pickup_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change my pickup address."
                    android:fontFamily="@font/gotham_book"
                    android:textSize="12sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Change_my_drop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change my drop address."
                    android:fontFamily="@font/gotham_book"
                    android:textSize="12sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cancel_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel my order."
                    android:fontFamily="@font/gotham_book"
                    android:textSize="12sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Talk_to_the_support_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talk to the support team."
                    android:fontFamily="@font/gotham_book"
                    android:textSize="12sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/chat_with_us"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Chat with us"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:layout_below="@id/linear"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corners"
            android:padding="16dp"
            android:textAllCaps="false"
            android:layout_marginTop="72dp"
            android:textColor="@color/white"/>

    </RelativeLayout>



</ScrollView>