<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/parent_liear_wallet_history"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="2"
	tools:context=".LoginRelated.mekcoins_wallet.MekcoinsWalletActivity"
	tools:ignore="HardcodedText,RtlSymmetry,UnusedAttribute,SmallSp">

	<include layout="@layout/custom_toolbar" />

	<LinearLayout
		android:id="@+id/wallet_history_view1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.9"
		android:background="@color/gray97"
		android:orientation="vertical"
		android:weightSum="4.5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="@android:color/white"
			android:gravity="center"
			android:orientation="horizontal"
			android:paddingHorizontal="16dp"
			android:weightSum="2"
			tools:ignore="NestedWeights">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:fontFamily="@font/gotham_medium"
				android:gravity="center"
				android:text="Available Coins"
				android:textSize="13sp" />

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:fontFamily="@font/gotham_medium"
				android:gravity="center|end"
				android:paddingEnd="40dp"
				android:text="10"
				android:textSize="13sp" />
		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginHorizontal="16dp"
			android:layout_weight="1"
			android:gravity="bottom">

			<EditText
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fontFamily="@font/gotham_medium"
				android:gravity="bottom"
				android:hint="Enter Amount"
				android:textColor="@android:color/black"
				android:importantForAutofill="no"
				android:inputType="number"
				android:textSize="14sp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_marginHorizontal="16dp"
				android:clickable="true"
				android:focusable="true"
				android:textColor="@color/mek_grey"
				android:fontFamily="@font/gotham_book"
				android:gravity="end|bottom"
				android:paddingBottom="16dp"
				android:text="Promocode?"
				android:textSize="10sp" />
		</RelativeLayout>

		<LinearLayout
			style="?attr/buttonBarStyle"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginHorizontal="16dp"
			android:layout_weight="1"
			android:gravity="bottom"
			android:orientation="horizontal"
			android:weightSum="3">

			<Button
				style="?attr/buttonBarButtonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="8dp"
				android:layout_weight="1"
				android:textColor="@android:color/black"
				android:background="@drawable/border_button"
				android:fontFamily="@font/montserrat_medium"
				android:text="100"
				android:textSize="14sp" />

			<Button
				style="?attr/buttonBarButtonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="8dp"
				android:layout_weight="1"
				android:textColor="@android:color/black"
				android:background="@drawable/border_button"
				android:fontFamily="@font/montserrat_medium"
				android:text="200"
				android:textSize="14sp" />

			<Button
				style="?attr/buttonBarButtonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="8dp"
				android:layout_weight="1"
				android:background="@drawable/border_button"
				android:fontFamily="@font/montserrat_medium"
				android:text="500"
				android:textColor="@android:color/black"
				android:textSize="14sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1.5"
			style="?attr/buttonBarStyle"
			android:gravity="center">

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/red_button_click"
				android:fontFamily="@font/montserrat_regular"
				android:text="Add Money"
				android:layout_marginHorizontal="16dp"
				style="?attr/buttonBarButtonStyle"
				android:textAllCaps="false"
				android:textColor="@color/gray97"
				android:textSize="14sp" />
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/wallet_history_view2"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.1"
		android:orientation="vertical">

		<LinearLayout
			style="?attr/buttonBarStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="2">

			<Button
				android:id="@+id/btn_statement"
				style="?attr/buttonBarButtonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@android:color/white"
				android:fontFamily="@font/montserrat_semi_bold"
				android:text="Statement"
				android:textColor="@color/mek_grey"
				android:textAllCaps="false"
				android:textSize="15sp" />

			<Button
				style="?attr/buttonBarButtonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@color/mek_grey"
				android:background="@android:color/white"
				android:fontFamily="@font/montserrat_semi_bold"
				android:text="FAQs"
				android:textAllCaps="false"
				android:textSize="15sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:gravity="end"
			android:orientation="horizontal"
			android:weightSum="2">

			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_gravity="end"
				android:layout_weight="1"
				android:background="@color/mek_red" />
		</LinearLayout>

