<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cv_details"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#A5A5A5"
                        android:fontFamily="@font/gotham_book_regular"
                        android:paddingTop="10dp"
                        android:textSize="10sp"
                        android:paddingBottom="10dp"
                        android:paddingStart="16dp"
                        android:text="28th July, 2018"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:background="#A5A5A5"
                        android:fontFamily="@font/gotham_book_regular"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="16dp"
                        android:text="10:30 a.m"
                        android:textColor="#ffffff" />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/order_id_2"
                        android:layout_gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/booking_history_background"
                        android:fontFamily="@font/gotham_book_regular"
                        android:paddingBottom="12dp"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:textSize="12sp"
                        android:text="#123"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="8dp"
                        android:src="@drawable/tick"
                        android:layout_gravity="right"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="8dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/booking_history_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:orientation="horizontal" >
                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="24dp"
                            android:src="@drawable/suzuki_logo" />

                        <TextView
                            android:id="@+id/car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:paddingTop="8dp"
                            android:layout_marginTop="4dp"
                            android:paddingStart="8dp"
                            android:textSize="12sp"
                            android:text="Wagonar R"
                            android:textColor="#5B5B5B" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/numberPlate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_book_regular"
                            android:paddingStart="44dp"
                            android:paddingBottom="12dp"
                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:textSize="12sp"
                            android:text="DL1P3204"
                            android:textColor="#848484" />

                        <TextView
                            android:id="@+id/service_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_book_regular"
                            android:gravity="end"
                            android:paddingBottom="12dp"
                            android:textSize="12sp"
                            android:paddingRight="16dp"
                            android:text="Denting Painting"
                            android:textColor="#DB0A16" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvstatus"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:paddingStart="48dp"
                        android:text="Awaiting confirmation"
                        android:textColor="@color/chart_light_red"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/relative_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/mybutton" >

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Accept"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_coin"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@id/text3"
                            android:text="(3 coins)"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingBottom="4dp"
                            android:paddingRight="4dp"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:background="@drawable/mybutton2"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Reject"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reasonImg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_border"
            android:src="@drawable/denting_painting" />
    </FrameLayout>

</FrameLayout>