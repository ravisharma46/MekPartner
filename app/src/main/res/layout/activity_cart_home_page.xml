<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddToCart.CartHomePage">

    <!--<include layout="@layout/toolbar_1"/>-->

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/recycler_view_carts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <FrameLayout
                android:id="@+id/payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/continue_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continue shopping"
                        android:padding="14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/border_white"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:drawablePadding="16dp"
                        android:drawableLeft="@drawable/arrow_back_black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/border_white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Two items added in cart"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\u20B9"
                                android:textColor="@color/red_dark"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/red_dark"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Shipping"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/red_dark"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Total (tax incl.)"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\u20B9"
                                android:textColor="@color/red_dark"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/red_dark"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/proceed"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proceed to Pay"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:background="@drawable/done_red_button"/>

                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/empty_cart"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Cart is empty"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="italic"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>