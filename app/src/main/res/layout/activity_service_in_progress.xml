<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".services.regular_service_partner.ServiceInProgress">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/service_toolbar_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray97"
        app:contentInsetEnd="8dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="#123"
        app:titleTextColor="@android:color/black">
        <Button
            android:id="@+id/service_menu_btn"
            style="@style/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Update Statue"
            android:textSize="10sp" />
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="?actionBarSize"
        android:id="@+id/frame_1"
        android:layout_alignParentTop="true"
        android:background="@color/orange">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_medium"
            android:paddingLeft="16dp"
            android:gravity="center"
            android:paddingRight="16dp"
            android:text="Service in progress"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/frame_1"
        android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Vehicle details"
                    android:textColor="@color/app_grey_headline_caption"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/frame_rect_02"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Maruti Suzuki"
                            android:textColor="@color/app_grey_headline_caption"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="WagonR"
                            android:textColor="@color/chart_deep_red"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="64dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="DL1R0ABC"
                            android:textColor="@color/app_caption_dark_grey"
                            android:textSize="12sp" />
                    </FrameLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:src="@drawable/maruti_suzuki" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Service type"
                    android:textColor="@color/app_grey_headline_caption"
                    android:textSize="12sp" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/frame_rect">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="Denting Painting"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvDetails_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"
                        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:padding="16dp"
                        android:text="Details"
                        android:textColor="@color/chart_deep_red"
                        android:textSize="10sp" />


                </FrameLayout>


                <LinearLayout
                    android:id="@+id/linear_paint_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/frame_rect_offwhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Interior cleaning"
                            android:textColor="@color/app_grey_headline_caption"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:padding="16dp"
                            android:src="@drawable/checked_svg" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/frame_rect">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Exterior cleaning"
                            android:textColor="@color/app_grey_headline_caption"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:padding="16dp"
                            android:src="@drawable/checked_svg" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/frame_rect_offwhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Dashboard cleaning"
                            android:textColor="@color/app_grey_headline_caption"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:padding="16dp"
                            android:src="@drawable/checked_svg" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/frame_rect">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/rubbing"
                            android:textColor="@color/app_grey_headline_caption"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:padding="16dp"
                            android:src="@drawable/checked_svg" />


                    </FrameLayout>


                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frame2"
                    android:layout_below="@id/linear_paint"
                    android:layout_width="match_parent"
                    android:background="@drawable/frame_rect_02"
                    android:layout_marginTop="16dp"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:layout_marginLeft="24dp"
                        android:text="Car Wash"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="10sp"
                        android:padding="16dp"
                        android:drawablePadding="4dp"
                        android:id="@+id/carWashDetails"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:textColor="@color/chart_deep_red"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:layout_marginRight="8dp"
                        android:text="Details"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_addmoreproblem"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:textColor="@color/chart_deep_red"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:layout_marginLeft="24dp"
                        android:text="+Add more problems"
                        android:layout_height="wrap_content" />


                </FrameLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:paddingRight="54dp"
                    android:layout_marginBottom="100dp"
                    android:paddingLeft="54dp"
                    android:id="@+id/bt_report_view"
                    android:background="@drawable/grey_button"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="View Customer Report"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:id="@+id/ll1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/frame_rect_02"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <Button
            android:id="@+id/bt_serviceComplete"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/done_red_button"
            android:fontFamily="@font/montserrat_medium"
            android:text="Service Completed"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>